<article class="product-item">
  <img src="<%= product.imageUrl %>" alt="<%= product.title %>" />
  <div class="product-item-content">
    <h2 style="text-wrap: wrap"><%= product.title %></h2>
    <div class="product-item-actions">
      <% if (locals.isAdmin) { %>
      <a class="btn btn-alt" href="/admin/products/<%= product.id %>">Update</a>
      <form action="/admin/products/delete/<%= product.id %>" method="POST">
        <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>" />
        <button class="btn btn-alt">Delete</button>
      </form>
      <% } else { %>
      <a class="btn btn-alt" href="/products/<%= product.id %>">View Details</a>
      <% } %>
    </div>
  </div>
</article>
