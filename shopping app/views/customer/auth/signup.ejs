<%- include('../../shared/homepage/head', { pageTitle: 'Signup' }) %>
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">

</head>
<body>
  <%- include('../../shared/homepage/header') %>
  <main>
    <h1 class="mt-3">Create New Account</h1>
    <% if (inputData.errorMessage) { %>
      <section class="alert">
        <h2>Invalid Input</h2>
        <p><%= inputData.errorMessage %></p>
      </section>
    <% } %>
    <form action="/signup?_csrf=<%= locals.csrfToken %>" method="POST" class="form">
      <%- include('../../shared/account/includes/account-add-form', { inputData: inputData }) %>
      <hr>
      <button class="btn btn-solid">Create Account</button>
      <p id="switch-form" class="mt-2"><a href="/login">Login instead</a></p>
    </form>
  </main>
<%- include('../../shared/homepage/footer') %>