<%- include('../../shared/homepage/head', { pageTitle: 'Login' }) %>
  <link rel="stylesheet" href="/styles/forms.css">
  <link rel="stylesheet" href="/styles/auth.css">
  <script src="/scripts/show-hide-password.js" defer></script>
</head>

<body>
  <%- include('../../shared/homepage/header') %>
  <main>
    <h1 class="mt-3">Login</h1>
    <% if (inputData.errorMessage) { %>
      <section class="alert">
        <h2>Invalid Credentials</h2>
        <p><%= inputData.errorMessage %></p>
      </section>
    <% } %>
    <form action="/login" method="POST" class="form">
      <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">

      <p>
        <label for="username">Username</label>
        <input type="text" id="username" name="username" value="<%= inputData.username %>" class="form-control"  required />
      </p>

      <p>
        <label for="password">Password</label>
        <section class="input-group" id="password-frame">
          <input type="password" id="password" name="password" value="<%= inputData.password %>" class="form-control" required>
          <section class="input-group-text">
            <a href="" class="text-black"><i class="fa fa-eye-slash"></i></a>
          </section>
        </section>
      </p>

      <hr>
      <button class="btn btn-solid">Login</button>

      <p id="switch-form" class="my-3"><a href="/signup">Create a new user</a></p>

      <p class="d-grid px-4">
        <a
          href="/gg"
          id="btn-google"
          class="btn text-uppercase fw-bold"
        >
          <i class="fab fa-google me-1"></i>
          Sign in with Google
        </a>
      </p>

      <p class="d-grid my-3 px-4">
        <a
          href="/fb"
          id="btn-facebook"
          class="btn text-uppercase fw-bold"
        >
          <i class="fab fa-facebook me-1"></i>
          Sign in with Facebook
        </a>
      </p>
    </form>
  </form>
  </main>
<%- include('../../shared/homepage/footer') %>