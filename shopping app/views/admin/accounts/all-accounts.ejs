<%- include('../../shared/homepage/head', { pageTitle: 'All Accounts' }) %>
</head>
<body>
  <%- include('../../shared/homepage/header') %>
  <main>
    <h1 class="my-2">Account Management</h1>
    <section>
      <p>
        <a href="/admin/accounts/new" class="btn mt-3">Add Account</a>
      </p>
    </section>
    <section>
      <table class="table table-striped table-hover mt-4 text-center">
        <thead>
          <tr class="table-light">
            <th scope="col">Username</th>
            <th scope="col">Name</th>
            <th scope="col">Type</th>
            <th scope="col">Manage</th>
          </tr>
        </thead>
        <tbody>
          <% for (const account of accounts) { %>
            <tr>
              <td><%= account.username %></td>
              <td><%= account.name %></td>
              <td>
                <% if(account.isAdmin) { %> 
                  Admin
                <% } else { %>  
                  Customer 
                <% } %> 
              </td>
              <td>
                <% if (!account.isAdmin) { %>
                  <form action="/admin/accounts/delete/<%= account.id %>" method="POST">
                    <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
                    <button 
                      class="btn btn-alt" 
                      type="submit"
                    >
                      <i class="fa-solid fa-trash"></i>
                    </button>
                  </form>
                <% } %>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </section>
  </main>
<%- include('../../shared/homepage/footer') %>