<%- include('../../shared/includes/head', { pageTitle: 'All Categories' }) %>
</head>
<body>
  <%- include('../../shared/includes/header') %>
  <main>
    <h1>Category Management</h1>
    <section>
      <p>
        <a href="/admin/categories/new" class="btn mt-3">Add Category</a>
      </p>
    </section>
    <section>
      <table class="table table-striped table-hover mt-4 text-center">
        <thead>
          <tr class="table-light">
            <th scope="col">Category</th>
            <th scope="col">Manage</th>
          </tr>
        </thead>
        <tbody>
          <% for (const category of categories) { %>
            <tr>
              <td><%= category.title %></td>
              <td>
                <div class="d-inline-flex">
                  <a class="btn btn-alt" href="/admin/categories/<%= category.id %>">
                    <i class="fa-solid fa-pen-to-square"></i>
                  </a>
  
                  <form action="/admin/categories/delete/<%= category.id %>" method="POST">
                    <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>" />
                    <button class="btn btn-alt mx-2" type="submit">
                      <i class="fa-solid fa-trash"></i>
                    </button>
                  </form>
  
                  <a class="btn btn-alt" href="/categories/<%= category.id %>">
                    <i class="fa-solid fa-list"></i>
                  </a>
                </div>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </section>
  </main>
<%- include('../../shared/includes/footer') %>